{
  "name": "html-layout-parser",
  "version": "0.0.2",
  "private": true,
  "description": "High-performance HTML/CSS layout parser compiled to WebAssembly. Extracts character-level layout data for Canvas text rendering. Supports multi-font management, CSS separation, and works in Web/Worker/Node.js environments.",
  "type": "module",
  "scripts": {
    "build:wasm": "./build.sh",
    "build:packages": "pnpm -r run build",
    "build": "pnpm run build:wasm && pnpm run build:packages",
    "clean": "pnpm -r run clean && rm -rf dist",
    "clean:all": "pnpm run clean && rm -rf node_modules packages/*/node_modules",
    "typecheck": "pnpm -r run typecheck",
    "test": "pnpm --filter @html-layout-parser/tests test",
    "bench:performance": "node scripts/benchmark-performance.mjs",
    "docs:dev": "cd docs && pnpm dev",
    "docs:build": "cd docs && pnpm build",
    "docs:preview": "cd docs && pnpm preview",
    "playground": "node playground/serve.js",
    "playground:dev": "node playground/serve.js 3000",
    "publish:all": "pnpm -r publish --access public",
    "publish:dry": "pnpm -r publish --access public --dry-run",
    "publish:first": "./scripts/publish-first-release.sh",
    "publish:first-dry": "./scripts/publish-first-release.sh --dry-run",
    "version:patch": "pnpm -r exec -- npm version patch",
    "version:minor": "pnpm -r exec -- npm version minor",
    "version:major": "pnpm -r exec -- npm version major"
  },
  "keywords": [
    "html",
    "layout",
    "parser",
    "wasm",
    "webassembly",
    "canvas",
    "text-rendering",
    "typography",
    "font",
    "css",
    "dom",
    "monorepo"
  ],
  "author": "Tajigaqzh <201267151@qq.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Tajigaqzh/html-layout-parser.git"
  },
  "bugs": {
    "url": "https://github.com/Tajigaqzh/html-layout-parser/issues"
  },
  "homepage": "https://Tajigaqzh.github.io/html-layout-parser/",
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
